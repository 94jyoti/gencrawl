{
    "website": "https://arbitragefunds.com",
    "domain": "financial",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "arbitragefunds.com"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "financial_detail_arbitragefunds_com",
        "crawl_method": "SELENIUM",
        "wait_time": 3,
        "custom_settings": {
            "HTTPCACHE_ENABLED": false
        },
        "parsing_type": "xpath",
        "start_urls": [
            "https://arbitragefunds.com/water-island-credit-opportunities",
            "https://arbitragefunds.com/arbitrage",
            "https://arbitragefunds.com/water-island-event-driven",
            "https://arbitragefunds.com/water-island-long-short"
        ],
        "ext_codes": {
            "instrument_name": {
                "paths": [
                    "//main[@id='page']/div/div/div/div/div/div/h1/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "temp_class_blocks": {
                "paths": [
                    "//div[@class='sqs-block-content']//button"
                ],
                "child_return_strategy": "multiple_items",
                "return_type": "selector",
                "selector": "root"
            },
            "nasdaq_ticker": {
                "paths": [
                    "//td[text()='Ticker']/following-sibling::*/text()"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "share_class": {
                "paths": [
                    "./text()"
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "total_expense_gross": {
                "paths": [
                    "//td[text()='Gross Expenses']/following-sibling::*/text()"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "total_expense_net": {
                "paths": [
                    "//td[text()='Net Expenses']/following-sibling::*/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "share_inception_date": {
                "paths": [
                    "//p[contains(text(),'Inception dates')]/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "investment_objective": {
                "paths": [
                    "//h3[contains(text(),'Strategy')]/following-sibling::p/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "minimum_initial_investment": {
                "paths": [
                    "//td[text()='Min. Investment']/following-sibling::*/text()"
                ],
                "return_type": "list-map",
                "selector": "root"
            }
        }
    }
}