{
    "website": "https://funds.leutholdgroup.com/",
    "domain": "financial",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "funds.leutholdgroup.com"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "financial_detail_field_mapping",
        "crawl_method": "SCRAPY_GET",
        "parsing_type": "xpath",
        "start_urls": [
            "https://funds.leutholdgroup.com/funds/48-leuthold-core-investment-fund",
            "https://funds.leutholdgroup.com/funds/49-leuthold-select-industries-fund",
            "https://funds.leutholdgroup.com/funds/47-grizzly-short-fund",
            "https://funds.leutholdgroup.com/funds/1-leuthold-global-fund"
        ],
        "ext_codes": {
            "instrument_name": {
                "paths": [
                    "(//h1)[2]/text()"
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "temp_class_blocks": {
                "paths": [
                    "(//table)[1]//tr//td[1]"
                ],
                "child_return_strategy": "multiple_items",
                "return_type": "selector",
                "selector": "root"
            },
            "nasdaq_ticker": {
                "paths": [
                    "./text()"
                ],
                "cleanup_functions": [
                    "obj['nasdaq_ticker'].split('(')[-1] .replace(')', '')"
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "cusip": {
                "paths": [
                    "//*[contains(text(),'CUSIP')]/following-sibling::td/text()"
                ],
                "cleanup_functions": [
                    "obj['cusip'][0].split('/')"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "share_class": {
                "paths": [
                    "./text()"
                ],
                "cleanup_functions": [
                    "obj['share_class'].split('(')[0] "
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "share_inception_date": {
                "paths": [
                    "(//table)[1]//td[4]/text()"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "minimum_initial_investment": {
                "paths": [
                    "//*[contains(text(),'Regular (non-IRA) Accoun')]/following-sibling::td/text()"
                ],
                "cleanup_functions": [
                    "obj['minimum_initial_investment'][0].split('/')"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "benchmarks": {
                "paths": [
                    "//table[@class=\"performance-table table table-striped\"]//th/text()[contains(.,' ')]"
                ],
                "return_type": "list",
                "selector": "root"
            },
            "temp_fund_managers": {
                "paths": [
                    "//a[contains(text(),'CFA')]"
                ],
                "child_return_strategy": "multiple_objects",
                "return_type": "selector",
                "selector": "root"
            },
            "fund_manager": {
                "paths": [
                    "./text()"
                ],
                "return_type": "str",
                "selector": "temp_fund_managers"
            }
        }
    }
}