{
    "website": "https://www.mdihospital.org/",
    "domain": "hospital",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "mdihospital.org"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "hospital_detail",
        "crawl_method": "SELENIUM",
        "parsing_type": "xpath",
        "start_urls": [],
        "ext_codes": {
            "retry_condition": {
                "paths": [
                    "//h1/text()"
                ],
                "cleanup_functions": [
                    "True if 'Method Not Allowed'==obj['retry_condition'] else False"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "raw_full_name": {
                "paths": [
                    "//h1/text()"
                ],
                "return_type": "join",
                "selector": "root"
            },
            "speciality": {
                "paths": [
                    "//*[contains(text(),'Specialty')]/parent::div/text()"
                ],
                "cleanup_functions": [
                    "obj['speciality'].replace(':',' ')"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "phone": {
                "paths": [
                    "//*[contains(text(),'contact')]/parent::div/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "email": {
                "paths": [
                    "//*[contains(text(),'contact')]/parent::div/text()"
                ],
                "cleanup_functions": [
                    "obj['email'].replace(':',' ').split('or')[1] if 'or' in obj['email'] else None"
                ],
                "return_type": "str",
                "selector": "root"
            }
        }
    },
    "decision_tags": {
        "practice_in_address": "1",
        "phone_rgx": [
            "(\\d{3}[\\-]\\d{4})"
        ]
    }
}