{
    "website": "https://memorialhealth.com/",
    "domain": "hospital",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "memorialhealth.com"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "hospital_detail",
        "crawl_method": "SELENIUM",
        "parsing_type": "xpath",
        "start_urls": [
            "https://memorialhealth.com/physicians/profile/Dr-Donna-L-Evans-MD"
        ],
        "ext_codes": {
            "raw_full_name": {
                "paths": [
                    "(//h1)[1]/text()"
                ],
                "return_type": "join",
                "selector": "root"
            },
            "speciality": {
                "paths": [
                    "(.//h1/following::p)[1]"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "affiliation": {
                "paths": [
                    "//h5[contains(.,'Affiliations')]/following::ul[1]"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "address_raw": {
                "paths": [
                    "//h5[contains(.,'Specialties')]/preceding::p[1]"
                ],
                "return_type": "join",
                "selector": "root"
            },
            "practice_name": {
                "paths": [
                    "//div[@class='hca-card--section-content']/h5/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "phone": {
                "paths": [
                    "//a[contains(.,'phone')]/text()"
                ],
                "return_type": "str",
                "selector": "root"
            }
        }
    },
    "decision_tags": {
        "practice_in_address": "1"
    }
}