{
    "website": "https://www.ppmamerica.com",
    "domain": "financial",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "ppmamerica.com"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "financial_detail",
        "crawl_method": "SELENIUM",
        "wait_time": 3,
        "custom_settings": {
            "HTTPCACHE_ENABLED": false
        },
        "parsing_type": "xpath",
        "start_urls": [
            "https://www.ppmamerica.com/investment-solutions/mutual-funds/ppm-high-yield-core-fund",
            "https://www.ppmamerica.com/investment-solutions/mutual-funds/ppm-core-plus-fixed-income-fund"
        ],
        "ext_codes": {
            "instrument_name": {
                "paths": [
                    "//style/following-sibling::div[contains(text(),'Fund')]/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "nasdaq_ticker": {
                "paths": [
                    "//div[contains(text(),'Ticker')]/preceding-sibling::div/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "portfolio_assets": {
                "paths": [
                    "//div[contains(text(),'Total Assets')]/preceding-sibling::div/text()"
                ],
                "cleanup_functions": [
                    "obj['portfolio_assets']+'Million'"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "portfolio_assets_date": {
                "paths": [
                    "//div[contains(text(),'As of')]/text()[contains(.,'As of')]"
                ],
                "cleanup_functions": [
                    "obj['portfolio_assets_date'].split('of ')[-1].split('.')[0]"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "share_inception_date": {
                "paths": [
                    "//div[contains(text(),'Inception Date')]/preceding-sibling::div/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "investment_objective": {
                "paths": [
                    "//h3[contains(text(),'Investment Objective')]/following-sibling::p/text()"
                ],
                "return_type": "join",
                "selector": "root"
            },
            "investment_strategy": {
                "paths": [
                    "//h3[contains(text(),'Principal Investment Strategies')]/following-sibling::ul/li/p/text()"
                ],
                "return_type": "join",
                "selector": "root"
            },
            "temp_fund_managers": {
                "paths": [
                    "//h3[contains(text(),'Portfolio Manager')]/following-sibling::div[2]//h5/a"
                ],
                "child_return_strategy": "multiple_objects",
                "return_type": "selector",
                "selector": "root"
            },
            "fund_manager": {
                "paths": [
                    "./text()"
                ],
                "return_type": "str",
                "selector": "temp_fund_managers"
            }
        }
    }
}