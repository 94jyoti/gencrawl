{
    "website": "https://www.perrittcap.com/",
    "domain": "financial",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "perrittcap.com"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "financial_detail",
        "crawl_method": "SCRAPY_GET",
        "parsing_type": "xpath",
        "start_urls": [
            "https://www.perrittcap.com/funds/microcap-opportunities-fund/",
            "https://www.perrittcap.com/funds/perritt-ultra-microcap-fund/"
        ],
        "ext_codes": {
            "instrument_name": {
                "paths": [
                    "//h1[@class='page-title']/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "temp_class_blocks": {
                "paths": [
                    "//li[contains(text(),'Symbol')]/span"
                ],
                "child_return_strategy": "multiple_items",
                "return_type": "selector",
                "selector": "root"
            },
            "nasdaq_ticker": {
                "paths": [
                    "./text()"
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "share_inception_date": {
                "paths": [
                    "//li[contains(text(),'Inception')]/span/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "investment_objective": {
                "paths": [
                    "//h2[contains(text(),'Investment Objective')]/following-sibling::p/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "investment_strategy": {
                "paths": [
                    "//p[preceding-sibling::h2[contains(text(), 'Fund Strategy')] and following-sibling::h2]//text()"
                ],
                "return_type": "join",
                "selector": "root"
            },
            "turnover_rate": {
                "paths": [
                    "//li[contains(text(),'Turnover')]/span/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "temp_fund_managers": {
                "paths": [
                    "//div[@id='mof-top-content']"
                ],
                "child_return_strategy": "multiple_objects",
                "return_type": "selector",
                "selector": "root"
            },
            "fund_manager": {
                "paths": [
                    "./h2/text()"
                ],
                "return_type": "str",
                "selector": "temp_fund_managers"
            },
            "fund_manager_years_of_experience_with_fund": {
                "paths": [
                    ".//div//ul/li[1]/text()"
                ],
                "cleanup_functions": [
                    "obj['fund_manager_years_of_experience_with_fund'].split(',')[0].replace('Portfolio Manager since ', '')"
                ],
                "return_type": "str",
                "selector": "temp_fund_managers"
            }
        }
    }
}