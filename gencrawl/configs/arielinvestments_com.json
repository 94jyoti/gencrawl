{
    "website": "https://www.arielinvestments.com/",
    "domain": "financial",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "arielinvestments.com"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "financial_detail_field_mapping",
        "crawl_method": "SELENIUM",
        "wait_time": 3,
        "custom_settings": {
            "HTTPCACHE_ENABLED": false
        },
        "parsing_type": "xpath",
        "start_urls": [
            "https://www.arielinvestments.com/af/",
            "https://www.arielinvestments.com/aaf/",
            "https://www.arielinvestments.com/aff/",
            "https://www.arielinvestments.com/aif/",
            "https://www.arielinvestments.com/agf/",
            "https://www.arielinvestments.com/small/",
            "https://www.arielinvestments.com/small-concentrated/",
            "https://www.arielinvestments.com/smid/",
            "https://www.arielinvestments.com/mid/",
            "https://www.arielinvestments.com/focused/",
            "https://www.arielinvestments.com/micro/",
            "https://www.arielinvestments.com/small-deep/",
            "https://www.arielinvestments.com/international-dm/",
            "https://www.arielinvestments.com/international-dmem/",
            "https://www.arielinvestments.com/global/",
            "https://www.arielinvestments.com/global-concentrated/"
        ],
        "ext_codes": {
            "instrument_name": {
                "paths": [
                    "//div[contains(text(),'Value Strategy')]/parent::div/div[2]/text()",
                    "//div[contains(text(),'Value Global Strategy')]/parent::div/div[2]/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "temp_class_blocks": {
                "paths": [
                    "//span[contains(text(),'Inception:')]/following-sibling::em",
                    "//span[contains(text(),'Inception:')]"
                ],
                "cleanup_functions": [
                    "obj['temp_class_blocks'][:-1] if len(obj['temp_class_blocks']) > 1 else obj['temp_class_blocks']"
                ],
                "child_return_strategy": "multiple_items",
                "return_type": "selector",
                "selector": "root"
            },
            "nasdaq_ticker": {
                "paths": [
                    "//span[contains(text(),'Ticker Symbol')]/following-sibling::em/following-sibling::text()"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "share_class": {
                "paths": [
                    "./text()"
                ],
                "cleanup_functions": [
                    "obj['share_class'].replace('Inception:',' ')",
                    "obj['share_class'].replace(':',' ')"
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "portfolio_management_style": {
                "paths": [
                    "//span[contains(text(),'Investment Style')]/parent::div/text()",
                    "//span[contains(text(),'Investment style')]/parent::div/text()",
                    "//span[contains(text(),'Style')]/parent::div/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "portfolio_assets": {
                "paths": [
                    "//span[contains(text(),'Assets')]/parent::div/text()"
                ],
                "cleanup_functions": [
                    "obj['portfolio_assets'].split('as')[0]"
                ],
                "return_type": "join",
                "selector": "root"
            },
            "portfolio_assets_date": {
                "paths": [
                    "//span[contains(text(),'Assets')]/parent::div/text()"
                ],
                "cleanup_functions": [
                    "obj['portfolio_assets_date'].split('as of')[-1]"
                ],
                "return_type": "join",
                "selector": "root"
            },
            "total_expense_gross": {
                "paths": [
                    "(//div[@class='expense-ratio'])/text()"
                ],
                "cleanup_functions": [
                    "[o.split(':')[-1] for o in obj['total_expense_gross']]",
                    "[o.replace('*',' ') for o in obj['total_expense_gross']]",
                    "[o for o in obj['total_expense_gross'] if o.strip()]"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "share_inception_date": {
                "paths": [
                    "./following-sibling::text()"
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "turnover_rate": {
                "paths": [
                    "//span[contains(text(),'Turnover')]/parent::div/text()"
                ],
                "cleanup_functions": [
                    "obj['turnover_rate'].split('typically')[-1]"
                ],
                "return_type": "join",
                "selector": "root"
            },
            "benchmarks": {
                "paths": [
                    "//span[contains(text(),'Performance')]/parent::h1/following-sibling::table/tbody/tr/td[1]/span[contains(text(),'Index')]"
                ],
                "cleanup_functions": [
                    "list(set(obj['benchmarks']))"
                ],
                "return_type": "list",
                "selector": "root"
            },
            "temp_fund_managers": {
                "paths": [
                    "//div[contains(text(),'Portfolio Manager')]/parent::div/div[2]/div/div/span"
                ],
                "child_return_strategy": "multiple_objects",
                "return_type": "selector",
                "selector": "root"
            },
            "fund_manager": {
                "paths": [
                    "./a/text()"
                ],
                "return_type": "str",
                "selector": "temp_fund_managers"
            }
        }
    }
}