{
    "website": "https://www.horizonmutualfunds.com",
    "domain": "financial",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "horizonmutualfunds.com"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "financial_detail_field_mapping",
        "crawl_method": "SCRAPY_GET",
        "parsing_type": "xpath",
        "start_urls": [
            "https://www.horizonmutualfunds.com/aaa-fund.html",
            "https://www.horizonmutualfunds.com/aim-fund.html",
            "https://www.horizonmutualfunds.com/ara-fund.html",
            "https://www.horizonmutualfunds.com/def-fund.html",
            "https://www.horizonmutualfunds.com/usra-fund.html",
            "https://www.horizonmutualfunds.com/esg-fund.html",
            "https://www.horizonmutualfunds.com/div-fund.html"
        ],
        "ext_codes": {
            "instrument_name": {
                "paths": [
                    "//div[@class = 'grid-container']/div/div/div/div/img/@alt"
                ],
                "cleanup_functions": [
                    "obj['instrument_name'].replace('Image','')"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "temp_class_blocks": {
                "paths": [
                    "//p[contains(text(),'CLASS')]"
                ],
                "child_return_strategy": "multiple_items",
                "return_type": "selector",
                "selector": "root"
            },
            "nasdaq_ticker": {
                "paths": [
                    "//p[contains(text(),'CLASS')]/following-sibling::p/text()"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "cusip": {
                "paths": [
                    "//tr/td[contains(text(),'Share Classes')]/parent::tr/following-sibling::tr/td[3]/text()"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "share_class": {
                "paths": [
                    "./text()"
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "portfolio_consultant": {
                "paths": [
                    "//p[contains(text(),'the adviser')]/text()"
                ],
                "cleanup_functions": [
                    "obj['portfolio_consultant'].split(',')[0]"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "total_expense_gross": {
                "paths": [
                    "//tr/td[contains(text(),'Share Classes')]/parent::tr/following-sibling::tr/td[5]/text()"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "total_expense_net": {
                "paths": [
                    "//tr/td[contains(text(),'Share Classes')]/parent::tr/following-sibling::tr/td[6]/text()"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "share_inception_date": {
                "paths": [
                    "//tr/td[contains(text(),'Share Classes')]/parent::tr/following-sibling::tr/td[4]/text()"
                ],
                "cleanup_functions": [
                    "obj['share_inception_date'] + ([None]* (len(obj['nasdaq_ticker']) - len(obj['share_inception_date'])))"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "investment_objective": {
                "paths": [
                    "//h4[contains(text(),'Fund Description') or contains(text(),'Fund Overview')]/following-sibling::p[1]/text()[not(contains(.,'Launched'))]"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "investment_strategy": {
                "paths": [
                    "//strong[contains(text(),'Strategy') and not(contains(text(),'Options')) and not(contains(text(),'Opportunistic')) and not(contains(text(),'Risk'))]/parent::p/text()"
                ],
                "return_type": "str",
                "selector": "root"
            }
        }
    }
}