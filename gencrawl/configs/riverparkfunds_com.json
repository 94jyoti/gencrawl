{
    "website": "https://www.riverparkfunds.com/",
    "domain": "financial",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "riverparkfunds.com"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "financial_detail",
        "crawl_method": "SELENIUM",
        "wait_time": 3,
        "custom_settings": {
            "HTTPCACHE_ENABLED": false
        },
        "parsing_type": "xpath",
        "start_urls": [
            "http://www.riverparkfunds.com/floating-rate-cmbs-fund",
            "http://www.riverparkfunds.com/wedgewood-fund",
            "http://www.riverparkfunds.com/strategic-income-fund",
            "http://www.riverparkfunds.com/large-growth-fund",
            "http://www.riverparkfunds.com/short-term-high-yield-fund",
            "http://www.riverparkfunds.com/longshort-opportunity-fund"
        ],
        "ext_codes": {
            "instrument_name": {
                "paths": [
                    "//div[@class='header-content p-banner-inner']//h1[@class='banner-title animated fadeInDown']/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "temp_class_blocks": {
                "paths": [
                    "//p[@class='banner-intro']"
                ],
                "child_return_strategy": "multiple_items",
                "return_type": "selector",
                "selector": "root"
            },
            "nasdaq_ticker": {
                "paths": [
                    "./text()"
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "share_inception_date": {
                "paths": [
                    "//div[@class='performance-disclosure']/p[1]/text()"
                ],
                "cleanup_functions": [
                    "obj['share_inception_date'].split('was')[-1] "
                ],
                "return_type": "str",
                "selector": "root"
            },
            "investment_objective": {
                "paths": [
                    "(//div[@class='overview-holder']//p)[1]/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "investment_strategy": {
                "paths": [
                    "//h2[contains(text(),'Our Portfolio Manager')]/following-sibling::h4/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "temp_fund_managers": {
                "paths": [
                    "//h2[contains(text(),'Our Portfolio Manager')]/following-sibling::h4"
                ],
                "child_return_strategy": "multiple_objects",
                "return_type": "selector",
                "selector": "root"
            },
            "fund_manager": {
                "paths": [
                    "./text()"
                ],
                "return_type": "str",
                "selector": "temp_fund_managers"
            }
        }
    }
}