{
    "website": "https://www.mainehealth.org/",
    "domain": "hospital",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "mainehealth.org"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "hospital_detail",
        "crawl_method": "SCRAPY_GET",
        "parsing_type": "xpath",
        "start_urls": [],
        "ext_codes": {
            "raw_full_name": {
                "paths": [
                    "//h1/text()"
                ],
                "return_type": "join",
                "selector": "root"
            },
            "speciality": {
                "paths": [
                    "//span[@itemprop = 'medicalSpecialty']//text()"
                ],
                "return_type": "list",
                "selector": "root"
            },
            "affiliation": {
                "paths": [
                    "//div[contains(text(),'Hospital Affiliation')]/parent::div/ul/li/text()"
                ],
                "return_type": "list",
                "selector": "root"
            },
            "address_raw": {
                "paths": [
                    "//div[@class='module-pd-office-item']//div[@itemprop='address']"
                ],
                "child_return_strategy": "multiple_items",
                "return_type": "selector",
                "selector": "root"
            },
            "practice_name": {
                "paths": [
                    "./parent::section//strong//a//text()"
                ],
                "return_type": "list",
                "selector": "address_raw"
            },
            "phone": {
                "paths": [
                    "./following::span[@itemprop='telephone']/a/text()"
                ],
                "return_type": "list",
                "selector": "address_raw"
            },
            "fax": {
                "paths": [
                    "./following::span[@itemprop='faxNumber']/text()"
                ],
                "return_type": "list",
                "selector": "address_raw"
            }
        }
    }
}