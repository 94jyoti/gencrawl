{
    "website": "http://meridianfund.com/",
    "domain": "financial",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "meridianfund.com"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "financial_detail",
        "crawl_method": "SCRAPY_GET",
        "parsing_type": "xpath",
        "start_urls": [
            "http://meridianfund.com/strategies/meridian-small-cap-growth-fund/overview/",
            "http://meridianfund.com/strategies/meridian-growth-fund/overview/",
            "http://meridianfund.com/strategies/meridian-contrarian-fund/overview/",
            "http://meridianfund.com/strategies/meridian-equity-income-fund/overview/"
        ],
        "ext_codes": {
            "instrument_name": {
                "paths": [
                    "//h2[@class = 'page-title']/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "temp_class_blocks": {
                "paths": [
                    "//td[contains(text(),'Shares')]"
                ],
                "child_return_strategy": "multiple_items",
                "return_type": "selector",
                "selector": "root"
            },
            "nasdaq_ticker": {
                "paths": [
                    "./following-sibling::td/strong/text()"
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "share_class": {
                "paths": [
                    "./text()"
                ],
                "cleanup_functions": [
                    "obj['share_class'].split(':')[0]"
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "share_inception_date": {
                "paths": [
                    "//h3[contains(text(),'Inception')]/following-sibling::ul[1]/li//text()"
                ],
                "return_type": "join",
                "selector": "root"
            },
            "investment_objective": {
                "paths": [
                    "//*[contains(text(),'Investment Objective')]/following-sibling::*[1]//text()[contains(., ' ')]",
                    "//*[contains(text(),'Investment Objective')]/parent::*/following-sibling::*[1]//text()[contains(., ' ')]"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "benchmarks": {
                "paths": [
                    "//h3[contains(text(),'Benchmark')]/following-sibling::ul[1]/li//text()",
                    "//h3[contains(text(),'Benchmark')]/parent::*/following-sibling::ul[1]/li//text()[contains(., ' ')]"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "temp_fund_managers": {
                "paths": [
                    "//h3[contains(text(),'Portfolio Manager')]/following-sibling::ul/li[contains(text(),'years')]"
                ],
                "child_return_strategy": "multiple_objects",
                "return_type": "selector",
                "selector": "root"
            },
            "fund_manager": {
                "paths": [
                    "./text()"
                ],
                "cleanup_functions": [
                    "obj['fund_manager'].split(',')[0]"
                ],
                "return_type": "str",
                "selector": "temp_fund_managers"
            },
            "fund_manager_years_of_experience_in_industry": {
                "paths": [
                    "./text()"
                ],
                "cleanup_functions": [
                    "obj['fund_manager_years_of_experience_in_industry'].split(',')[-1].split('of')[0]"
                ],
                "return_type": "str",
                "selector": "temp_fund_managers"
            }
        }
    }
}