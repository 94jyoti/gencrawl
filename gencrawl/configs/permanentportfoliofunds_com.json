{
    "website": "https://www.permanentportfoliofunds.com/",
    "domain": "financial",
    "crawl_method": "SCRAPY_GET",
    "allowed_domains": [
        "permanentportfoliofunds.com"
    ],
    "parsing_type": "xpath",
    "country": "US",
    "language": "ENGLISH",
    "detail": {
        "spider": "financial_detail_field_mapping",
        "crawl_method": "SELENIUM",
        "wait_time": 3,
        "custom_settings": {
            "HTTPCACHE_ENABLED": false
        },
        "parsing_type": "xpath",
        "start_urls": [
            "https://www.permanentportfoliofunds.com/versatile-bond-portfolio.html",
            "https://www.permanentportfoliofunds.com/permanent-portfolio.html",
            "https://www.permanentportfoliofunds.com/short-term-treasury-portfolio.html",
            "https://www.permanentportfoliofunds.com/aggressive-growth-portfolio.html"
        ],
        "ext_codes": {
            "instrument_name": {
                "paths": [
                    "//div[@class='content-body col-md-8']/h3/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "temp_class_blocks": {
                "paths": [
                    "//h3[contains(text(),'Share Classes:')]/following-sibling::ul[1]/li",
                    "//h3[contains(text(),'Share Class:')]/following-sibling::ul[1]/li"
                ],
                "child_return_strategy": "multiple_items",
                "return_type": "selector",
                "selector": "root"
            },
            "nasdaq_ticker": {
                "paths": [
                    "./text()"
                ],
                "cleanup_functions": [
                    "obj['nasdaq_ticker'].split(':')[-1] "
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "share_class": {
                "paths": [
                    "./text()"
                ],
                "cleanup_functions": [
                    "obj['share_class'].split(':')[0] "
                ],
                "return_type": "str",
                "selector": "temp_class_blocks"
            },
            "fees_total_12b_1": {
                "paths": [
                    "(//div[@class='table-responsive']//tbody)[5]//tr[3]//td/following-sibling::td"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "other_expenses": {
                "paths": [
                    "(//div[@class='table-responsive']//tbody)[5]//tr[4]//td/following-sibling::td"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "management_fee": {
                "paths": [
                    "(//div[@class='table-responsive']//tbody)[5]//tr[2]//td/following-sibling::td"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "deferred_sales_charge": {
                "paths": [
                    "(//div[@class='table-responsive']//tbody)[4]//tr[3]//td/following-sibling::td"
                ],
                "cleanup_functions": [
                    "[o.split('%')[0] for o in obj['deferred_sales_charge']]"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "expense_waivers": {
                "paths": [
                    "(//div[@class='table-responsive']//tbody)[5]//tr[6]//td/following-sibling::td"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "maximum_sales_charge_full_load": {
                "paths": [
                    "(//div[@class='table-responsive']//tbody)[4]//tr[2]//td/following-sibling::td"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "total_expense_gross": {
                "paths": [
                    "(//div[@class='table-responsive']//tbody)[2]//tr[2]//td/following-sibling::td"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "total_expense_net": {
                "paths": [
                    "(//div[@class='table-responsive']//tbody)[2]//tr[3]//td/following-sibling::td"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "share_inception_date": {
                "paths": [
                    "//h3[contains(text(),'Share Class')]/following-sibling::ul[2]/li/text()"
                ],
                "cleanup_functions": [
                    "[o.split(':')[-1] for o in obj['share_inception_date']]"
                ],
                "return_type": "list-map",
                "selector": "root"
            },
            "investment_objective": {
                "paths": [
                    "(//h3[contains(text(),'OVERVIEW')]/following-sibling::p)[1]/text()"
                ],
                "return_type": "str",
                "selector": "root"
            },
            "investment_strategy": {
                "paths": [
                    "(//h3[contains(text(),'OVERVIEW')]/following-sibling::p)[2]/text()"
                ],
                "return_type": "str",
                "selector": "root"
            }
        }
    }
}